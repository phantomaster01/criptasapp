<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles de la Cripta"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="8dp"
        android:textColor="@android:color/black"/>

    <!-- Información de la cripta -->
    <TextView
        android:id="@+id/tvDescripcionCripta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Información sobre la cripta seleccionada."
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="16dp"/>

    <!-- Botón para solicitar información -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSolicitarInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solicitar Información"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        app:icon="@android:drawable/ic_menu_info_details"
        android:layout_marginBottom="8dp"/>

    <!-- Botón para apartar cripta -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApartarCripta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apartar Cripta"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        app:icon="@android:drawable/ic_menu_save"/>

</LinearLayout>
