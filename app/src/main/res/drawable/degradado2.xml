<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa 1: Degradado superior -->
    <item android:top="0dp" android:height="400dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#5A548A"
                android:endColor="#4C328A"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Capa 2: Degradado inferior -->
    <item android:top="250dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#372868"
                android:endColor="#3C1A3E"
                android:type="linear"/>
        </shape>
    </item>

</layer-list>
